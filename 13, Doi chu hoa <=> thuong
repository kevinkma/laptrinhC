#include <stdio.h>
#include <stdlib.h>

int main()
{
   char c;
   printf("nhap va 1 ki tu: ");
   scanf("%c",&c);
   if (c>='a' && c<='z')
   {
     c=c-32;
     printf("ki tu in hoa la: %c",c);
   }
   else if (c>='A' && c<='Z')
   {
     c=c+32;
     printf("ki tu thuong la: %c",c);
   }
   else if (c>='0' && c<='9')
   {
      printf("ban da nhap ki tu so!");
   }
   else
   printf("ban da nhap ki tu %c",c);
    return 0;
}
