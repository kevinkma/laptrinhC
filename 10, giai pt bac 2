#include <stdio.h>
#include <conio.h>
#include <math.h>
void main()
{
  float a,b,c,delta;
  printf("nhap a: ");
  scanf("%f",&a);
  printf("nhap b: ");
  scanf("%f",&b);
  printf("nhap c: ");
  scanf("%f",&c);
  delta=b*b-4*a*c;
  if (a == 0)
   printf("phuong trinh co nghiem x= %f",-c/b);
  else
  {
    if (delta < 0)
     printf("phuong trinh vo nghiem.");
    else if (delta == 0)
     printf("phuong trinh co nghiem duy nhat: x= %f",-b/(2*a));
    else
    {
     printf("phuong trinh co 2 nghiem phan biet: ");
     printf("x1 = %f",(-b-sqrt(delta))/(2*a));
     printf("x1 = %f",(-b+sqrt(delta))/(2*a));
    }
  }
  getch();
}
